{
  "name": "pika-pack-template",
  "main": "src/index.ts",
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-ts-standard-pkg",
        {
          "exclude": [
            "__tests__/**/*"
          ]
        }
      ],
      [
        "@pika/plugin-build-node"
      ],
      [
        "@pika/plugin-build-web"
      ],
      [
        "@pika/plugin-build-deno"
      ]
    ]
  },
  "pre-commit": "check-commit",
  "scripts": {
    "test": "jest",
    "lint": "eslint src/**/*s",
    "check-commit": "lint-staged && tsc && jest --changedSince=HEAD",
    "build": "pika build"
  },
  "dependencies": {
    "@pika/fetch": "^0.1.0"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^12.1.4",
    "@pika/pack": "^0.5.0",
    "@pika/plugin-build-deno": "^0.9.2",
    "@pika/plugin-build-node": "^0.9.2",
    "@pika/plugin-build-web": "^0.9.2",
    "@pika/plugin-ts-standard-pkg": "^0.9.2",
    "@pika/types": "^0.9.2",
    "@types/jest": "^26.0.24",
    "@types/node": "^16.0.1",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "commitlint": "^12.1.4",
    "eslint": "^7.30.0",
    "jest": "^27.0.6",
    "lint-staged": "^11.0.0",
    "pre-commit": "^1.2.2",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.5"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix"
    ],
    "*.js": [
      "eslint --fix"
    ],
    "*.css": [
      "stylelint --fix"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
