{
  "name": "browser-ext-utilz",
  "main": "src/index.ts",
  "license": "MIT",
  "scripts": {
    "prerun-api-extractor": "tsc",
    "run-api-extractor": "api-extractor run",
    "postbuild": "echo 'skipping' || npm run run-api-extractor",
    "test": "jest",
    "lint": "eslint src/**/*s",
    "check-commit": "lint-staged && jest --changedSince=HEAD",
    "build": "pika-pack build"
  },
  "pre-commit": "check-commit",
  "lint-staged": {
    "*.ts": [
      "eslint --fix"
    ],
    "*.js": [
      "eslint --fix"
    ],
    "*.css": [
      "stylelint --fix"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-ts-standard-pkg",
        {
          "exclude": [
            "__tests__/**/*"
          ]
        }
      ],
      [
        "@pika/plugin-build-node"
      ],
      [
        "@pika/plugin-build-web"
      ],
      [
        "@pika/plugin-build-deno"
      ]
    ]
  },
  "dependencies": {
    "callbag-from-async-iter": "^1.0.0",
    "date-fns": "^2.19.0",
    "nanoid": "^3.0.2",
    "webextension-polyfill": "^0.8.0"
  },
  "optionalDependencies": {
    "react": "^17.0.2"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^12.1.4",
    "@jest/types": "^27.0.6",
    "@microsoft/api-extractor": "^7.13.1",
    "@pika/pack": "^0.5.0",
    "@pika/plugin-build-deno": "^0.9.2",
    "@pika/plugin-build-node": "^0.9.2",
    "@pika/plugin-build-web": "^0.9.2",
    "@pika/plugin-ts-standard-pkg": "^0.9.2",
    "@pika/types": "^0.9.2",
    "@types/eslint": "^7.28.0",
    "@types/jest": "^27.0.1",
    "@types/node": "^15.12.2",
    "@types/react": "^17.0.18",
    "@types/webextension-polyfill": "^0.8.0",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "commitlint": "^12.1.4",
    "eslint": "^7.30.0",
    "jest": "^27.0.6",
    "jest-webextension-mock": "^3.7.18",
    "lint-staged": "^11.0.0",
    "pre-commit": "^1.2.2",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.5"
  }
}
