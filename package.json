{
  "name": "browser-ext-utilz",
  "version": "1.23.15",
  "main": "src/index.ts",
  "scripts": {
    "prerun-api-extractor": "yarn tsc",
    "run-api-extractor": "api-extractor run",
    "postbuild": "yarn run-api-extractor",
    "test": "jest",
    "lint": "eslint src/**/*s",
    "check-commit": "lint-staged && jest --changedSince=HEAD",
    "build": "pika build"
  },
  "pre-commit": "check-commit",
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "echo $(npm run run-api-extractor && git add extracted-api.json)"
    ],
    "*.js": [
      "eslint --fix"
    ],
    "*.css": [
      "stylelint --fix"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-ts-standard-pkg",
        {
          "exclude": [
            "__tests__/**/*"
          ]
        }
      ],
      [
        "@pika/plugin-build-node"
      ],
      [
        "@pika/plugin-build-web"
      ],
      [
        "@pika/plugin-build-deno"
      ]
    ]
  },
  "dependencies": {
    "callbag-from-async-iter": "^1.0.0",
    "nanoid": "^3.0.2",
    "webextension-polyfill-ts": "^0.24.0"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^11.0.0",
    "@microsoft/api-extractor": "^7.13.1",
    "@pika/pack": "^0.5.0",
    "@pika/plugin-build-deno": "^0.9.2",
    "@pika/plugin-build-node": "^0.9.2",
    "@pika/plugin-build-web": "^0.9.2",
    "@pika/plugin-ts-standard-pkg": "^0.9.2",
    "@pika/types": "^0.9.2",
    "@semantic-release/gitlab-config": "^8.0.0",
    "@types/eslint": "^7.2.6",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.24",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "commitlint": "^11.0.0",
    "eslint": "^7.19.0",
    "jest": "^26.6.3",
    "jest-webextension-mock": "^3.5.0",
    "lint-staged": "^10.5.3",
    "pre-commit": "^1.2.2",
    "ts-jest": "^26.5.0",
    "typescript": "^4.1.3"
  }
}
